<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:background="@color/Activity"
    tools:context=".views.Product_Activity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="80dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="400dp"
                android:backgroundTint="#864E4E4E"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_back"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="دسته بندی"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/black"
                    />
                <RelativeLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_category"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/txt_name_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="کرم مرطوب کننده پوست"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:lines="2"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/ic_favorite"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:id="@+id/ic_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_favorite"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layout_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/layout_header"
                    >
                    <TextView
                        android:id="@+id/title_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/introduction"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/title_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/property"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/title_suitable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/suitable"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_suitable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/title_how_to_use"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/how_to_use"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_how_to_use"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/title_compounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/compounds"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_compounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/title_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/warning"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/txt_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bottom_navigation_productActivity"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_cart"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="30dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardView_bg"
                    >
                    <ImageView
                        android:id="@+id/imageView_buy"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_go"
                        android:layoutDirection="ltr"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:text="790.000 IR"
                android:textColor="@color/cardView_bg"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@id/cardView_cart"
                />
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>
</RelativeLayout>