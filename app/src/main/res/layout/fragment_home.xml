<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Activity"
    android:layoutDirection="rtl"
    android:scrollbars="none"
    tools:context=".navbar_fragments.Home_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/Main_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <HorizontalScrollView
                        android:id="@+id/layout_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:layout_marginTop="20dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_makeUp"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/makeup"
                                    android:foreground="@color/cardView_makeUp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/product_makeUp"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom|end"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_face"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/face"
                                    android:foreground="@color/cardView_face"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/product_face"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom|end"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_hair"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/hair"
                                    android:foreground="@color/cardView_hair"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/product_hair"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom|end"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_body"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="20dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/body"
                                    android:foreground="@color/cardView_body"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/product_body"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom|end"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <RelativeLayout
                        android:id="@+id/title_best_sellers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/best_sellers"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_best_sellers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_best_sellers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                    <RelativeLayout
                        android:id="@+id/title_best_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/best_brands"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_best_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_best_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                    <RelativeLayout
                        android:id="@+id/title_makeup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/makeUp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_makeup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_makeup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                    <RelativeLayout
                        android:id="@+id/title_productBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/productBody"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_productBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_productBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                    <RelativeLayout
                        android:id="@+id/title_productFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/productFace"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_productFace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_productFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                    <RelativeLayout
                        android:id="@+id/title_productHair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/productHair"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/more_productHair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_productHair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="none"
                        android:layoutDirection="ltr"
                        android:minHeight="200dp"
                        />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/Activity"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>